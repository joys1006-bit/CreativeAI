{
    "name": "ai-captioner-pro",
    "private": true,
    "version": "1.0.0",
    "description": "AI-powered Captioning & Business Intelligence Tool",
    "author": "CreativeAI Team",
    "main": "electron/main.js",
    "type": "commonjs",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "vite build && electron-builder"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "axios": "^1.6.2",
        "ffmpeg-static": "^5.3.0",
        "fluent-ffmpeg": "^2.1.3",
        "framer-motion": "^10.16.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@vitejs/plugin-react": "^4.2.0",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^28.3.3",
        "electron-builder": "^24.9.1",
        "vite": "^5.0.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.creativeai.captioner",
        "productName": "AI Captioner PRO",
        "win": {
            "target": [
                "nsis"
            ]
        },
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ]
    }
}
